*{box-sizing: border-box;}
body{width: 100%;background-color: #fafafa;margin: 0;position: relative;min-height: 100vh;}
.box{max-width: 480px;margin: 0 auto 100px;}
/*header*/
.header{width: 100%;height: 245px;background-color: #3fa0ef;text-align: center;}
.logo{padding-top: 63px;}
.title{font-size: 15px;color: #fff;letter-spacing: 1px;line-height: 30px;}
.searchBox{width: 92%;margin: 32px auto 25px;position: relative;}
#input{width: 100%;height: 50px;background-color: rgba(255,255,255,0.8);outline: none;color: rgba(0,0,0,0.8);
    border: 1px solid rgba(255,255,255,0.6);padding-left: 10px;font-size: 15px;border-radius: 2px;}
#input::-webkit-input-placeholder {color: rgba(0,0,0,0.5);}
#input:-moz-placeholder {color: rgba(0,0,0,0.5);}
#input::-moz-placeholder {color: rgba(0,0,0,0.5);}
#input:-ms-input-placeholder {color: rgba(0,0,0,0.5);}
.icon{position: absolute;right: 8px;top: 12.5px;z-index:5;background-repeat: no-repeat;background-position: 0 0;
    width: 25px; height: 25px;background-image: url(imgs/search.png);background-size: 25px 25px;}
/*section*/
.section{width: 92%;margin: 0 auto;min-height: 150px;}
.conTitle{display: none;}
.conTitle{font-size: 16px;color: rgba(31,31,31,0.6);letter-spacing: 0;margin: 25px 0 15px;}
.lists{width: 100%;}
.list{padding: 17.5px 15px;width: 100%;background-color: #fff;border-radius: 6px;margin: 10px 0;box-shadow: 0 1px 5px 0 rgba(0,0,0,0.05);}
.item{font-size: 13px;color: rgba(26,26,26,0.6);letter-spacing: 0;line-height: 25px;}
.item span{font-size: 15px;color: rgba(26,26,26,0.85);font-weight: 600;}
.hr{border-top:1px solid rgba(0,0,0,0.2);}
/*myMsg*/
.myMsg{width: 100%;display: flex;justify-content: space-between;}
.myMsg>div{width: 30%;}
.myMsg>div:nth-child(2){width: 65%;}
.msgBox{display: flex;flex-direction: column;color: rgba(35,25,22,0.6);padding: 10px 0;font-size: 14px;}
.msgBox>div{}
.msgBox>div>a{text-decoration: none;color: rgba(35,25,22,0.6);}
/*noneRes*/
.noneRes{width: 100%;text-align: center;margin: 89px 0 14px;}
.noneText{opacity: 0.6;font-size: 15px; color: #1A1A1A;letter-spacing: 0;line-height: 25px;text-align: center;margin-bottom: 30px;}
/*footer*/
.footer{width: 92%;margin: 22.5px auto;}
.footer>div{font-size: 12px;color: #3FA0EF;letter-spacing: 0;line-height: 17px;}
.footer a{text-decoration: none;color: #3FA0EF;}
/*aside*/
.aside{width: 92%;text-align: left;background-color: #fafafa;margin: 0 auto;}
.official>a{font-family: PingFangSC-Regular;font-size: 15px;color: #3FA0EF;letter-spacing: 0;line-height: 30px;text-decoration: none;}
.wwwMsg{font-size: 12px;color: rgba(0,0,0,0.5);letter-spacing: 0;line-height: 17px;}