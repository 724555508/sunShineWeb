[v-cloak]{display:none;}
body{background-color: #f2f2f1;width:100%;margin: 0 auto;}
.main{width: 97%;margin: 0px auto;background: #FFFFFF;box-shadow: 0 0 10px 0 rgba(0,0,0,0.02);border-radius: 8px;padding:28px 80px;min-height: calc(100vh - 50px);}
/*面包屑*/
.breadcrumb > li + li:before {
    color: #0c0c0c;
    content: ">";
    padding: 0 5px;
}
.breadcrumb{
    margin-bottom:0px;
    padding:10px 0 10px 25px;
}
/*点击进行跳转a标签的样式*/
.active:link{text-decoration:none;color: #0096FF;}
.active:visited{text-decoration:none;color: #0096FF;}
.active:active{text-decoration:none;color: #0096FF;}
.active:hover{text-decoration:none;color: #0096FF;}
/*不跳转的a标签样式*/
.inActive:link{text-decoration:none;color: #0c0c0c;}
.inActive:visited{text-decoration:none;color: #0c0c0c;}
.inActive:active{text-decoration:none;color: #0c0c0c;}
.inActive:hover{text-decoration:none;color: #0c0c0c;}
.main .title{font-size: 20px;color: #1A1A1A;}
.main .info1{display:flex;padding:17px 0 21px 0;}
.main .info1 .time{font-size: 14px;color: #666666;}
.main .info1 .div1{font-size: 14px;color: #666666;padding-left:20px;}
.main .info1 .div1 span{color: #333333;display:inline-block;padding-left:5px;}
.main .info2{width:800px;}
.main .info2 p{font-size: 14px;color: #333333;line-height:2;}
/*.main .info2 .img{padding:10px 30px 30px 30px;width:100%;}*/
/*.main .info2 .img img{width:100%;}*/
.main .info3{display:flex;padding-top:20px;}
.main .info3 .btn{background: #0096FF;box-shadow: 0 1px 5px 0 rgba(0,150,255,0.15);border-radius: 4px;font-size: 16px;
 color: #FFFFFF;padding:6px 40px;margin-right:10px;outline:none;}

.main .info3 .btn1{background: #D9D9D9;border-radius: 4px;font-size: 16px;color: #FFFFFF;margin-right:10px;padding:6px 40px;border:none;outline:none;}
.main .info3 .btn2{background: #EA4A4A;}
.main .info3 .btn3{background: #0096FF;box-shadow: 0 1px 5px 0 rgba(0,150,255,0.15);border-radius: 4px;font-size: 16px;
    color: #FFFFFF;padding:6px 40px;margin-right:10px;outline:none;border:none;}

.main .info3 .btn4{background: #D9D9D9;border-radius: 4px;font-size: 16px;color: #FFFFFF;margin-right:10px;padding:6px 40px;border:none;outline:none;}
.main .comment{font-family: PingFangSC-Medium;font-size: 16px;color: #1A1A1A;margin-top:40px;}
.main .listBox{margin-top:20px;}
.main .listBox .list:first-child{border-top:1px solid #EDEDED;}
.main .listBox .list{border-bottom:1px solid #EDEDED;display:flex;justify-content:space-between;padding:20px 0;width:100%;}
.main .listBox .list .left{display:flex;width:90%;word-wrap:break-word ;}
/*.main .listBox .list .img{width:30px;height:30px;}*/
.main .listBox .list .img img{width:30px;height:30px;}
.main .listBox .list .txt{margin-left:10px;width:90%;}
.main .listBox .list .txt h3{font-family: PingFangSC-Regular;font-size: 16px;color: #4B6E9F;}
.main .listBox .list .txt p{font-family: PingFangSC-Regular;font-size: 14px;color: #383838;padding:10px 0 6px 0;}
.main .listBox .list .txt span{font-family: PingFangSC-Regular;font-size: 14px;color: #666666;}
.main .listBox .list .deleteButton{height:20px;border: 1px solid #0096FF;border-radius: 100px;color:#0096FF;font-size:13px;background:#fff;padding:0 5px;margin-top:22px;}
/*加载更多按钮*/
.main .loadMore{background: #0096FF;border-radius: 4px;font-size: 16px;color: #FFFFFF;margin-right:10px;padding:6px 40px;border:none;outline:none;}
.main .loadBtn{width:100%;text-align:center;margin:30px 0;}
