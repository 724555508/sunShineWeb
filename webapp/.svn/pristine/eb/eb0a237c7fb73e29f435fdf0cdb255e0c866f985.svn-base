[v-cloak]{display:none;}
body{background-color: #f2f2f1;width:100%;margin: 0 auto;font-family: PingFangSC-Regular;}

/*面包屑导航*/
.breadcrumb > li + li:before {color: #0c0c0c;content: ">";padding: 0 5px;}
.breadcrumb{margin-bottom:0px;padding:10px 0 10px 30px;}
/*点击进行跳转a标签的样式*/
.active:link{text-decoration:none;color: #0096FF;}
.active:visited{text-decoration:none;color: #0096FF;}
.active:active{text-decoration:none;color: #0096FF;}
.active:hover{text-decoration:none;color: #0096FF;}
/*不跳转的a标签样式*/
.inActive:link{text-decoration:none;color: #0c0c0c;}
.inActive:visited{text-decoration:none;color: #0c0c0c;}
.inActive:active{text-decoration:none;color: #0c0c0c;}
.inActive:hover{text-decoration:none;color: #0c0c0c;}
.main{width: 97%;margin: 0px auto;background: #FFFFFF;box-shadow: 0 0 10px 0 rgba(0,0,0,0.02);border-radius: 8px;padding:20px 15px;height: calc(100vh - 50px);}
.main .title{width: 120px;height: 32px;font-family: PingFangSC-Medium;font-size: 14px;color: #fff;text-align: center;line-height: 32px;
    background: #0096FF;border: 1px solid #0096FF;border-radius: 4px;outline: none;}
/*搜索框*/
.searchBox .search2 .icon1{top: 6px;}
.searchBox .search2 .phone{width:200px;}
/*
弹框*/
#addexchangeCode1 .modal-dialog{width:480px !important;margin:0 auto;}
#addexchangeCode1 .modal-body .box{width:400px;margin:0 auto;}
/*#addexchangeCode1 .box{}*/
#addexchangeCode1 .box>div{width:430px;display:flex;margin-top:20px;align-items:center;}
#addexchangeCode1 .box>div .div1{width:100px;text-align:left;font-size:15px;}
#addexchangeCode1 .box .num{background: #F3F3F3;border-radius: 2px;border:none;height:36px;padding-left:20px;width:300px;}
#addexchangeCode1 .box .select #selectVal3{background: #F3F3F3;border-radius: 2px;border:none;height:36px;padding-left:20px;width:300px;}
/*#addexchangeCode1 .box>div .div2{text-align:left;background: #F3F3F3;border-radius: 2px;border:none;height:36px;}*/
#addexchangeCode1 .box>div .search1{display:flex;align-items:center;}
#addexchangeCode1 .box>div .search1 input{width:130px;background: #F3F3F3;border-radius: 2px;border:none;height:36px;padding-left:6px;}
#addexchangeCode1 .row{display:flex;justify-content:center;align-items:center;margin:22px 0;}
.modal-dialog {    /*水平垂直居中*/
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 3;
    margin:0 auto;
    -webkit-transform: translate(-50%, -50%) !important;
    -moz-transform: translate(-50%, -50%) !important;
    -ms-transform: translate(-50%, -50%) !important;
    -o-transform: translate(-50%, -50%) !important;
    transform: translate(-50%, -50%) !important;
}
.modal-header{border:0px;}