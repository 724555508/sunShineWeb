[v-cloak]{display: none;}
/*内容*/
.main .content{width: calc(100vw - 220px);min-width: 580px;overflow: hidden;background: #f2f2f2;padding: 15px;}
.main .content>div{background: #fff;padding: 15px;border-radius: 5px;height: calc(100% - 0px);}

/*aside*/
.aside{width: 100%;display: flex;justify-content: space-around;padding: 20px 0 0;}
.aside>div{width: 49%;min-height: 200px;background: #FFFFFF;box-shadow: 0 0 5px 0 rgba(210,215,224,0.60);border-radius: 5px;}


/*lists*/
.lists{/*margin: 20px 0 30px;*/display: flex;justify-content: flex-start;flex-wrap: wrap;}
/*.lists>a{}*/
.lists>a{width: 15%;height: 120px;text-align: center;margin: 10px 15px 0 0; box-shadow: 0 0 5px 0 rgba(210,215,224,0.60);background: rgba(255,255,255,0.50);border-radius: 8px;}
.lists>a:link{text-decoration:none;}
.lists>a:visited{text-decoration:none;}
.lists>a:active{text-decoration:none;}
.lists>a:hover{text-decoration:none;box-shadow: 0 1px 10px 0 rgba(0,150,255,0.40);}
.nav{opacity: 0.8;font-size: 18px;color: #000;letter-spacing: 0; line-height: 18px;margin: 25px 0 10px 0;}
.iconBox{position: relative;cursor: pointer;margin-top: 35px;}
.lists .iconBox img{width: 32px;}
.iconTitle{font-size: 14px;color: #000;letter-spacing: 0;line-height: 20px;margin: 20px 0 0;}

#chart1,#chart2{width: 100%;height: 100%;}